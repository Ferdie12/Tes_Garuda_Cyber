// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  voucher Voucher[]

  @@map("users")
}

model Product {
  id Int @id @default(autoincrement())
  name String
  price Int

  @@map("product")
}

model Voucher {
  id Int @id @default(autoincrement())
  user_id Int?
  code String
  value Float
  exp DateTime @db.Date
  is_default Boolean
  user User? @relation(fields: [user_id], references: [id])

  @@map("voucher")
}
